        @foreach (var item in Model)
        {
            <!-- each item -->
            <div class="item">
                <img src="~/TicketImages/@item.ImageName">
                <div class="left-side">
                    <h2> <a href="/TicNews/@item.TicketID">@item.Title</a> </h2>
                    <p>
                         @item.Discription
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi()</span>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- end each item -->
        }



